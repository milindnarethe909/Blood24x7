<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_title_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_400"
        android:padding="16dp"
        android:text="Call to SSIT"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowRadius="1.3"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowColor="#fdab52"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_callfirst">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_settings_phone_black_24dp"
            android:padding="16dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cd_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="16dp"
            app:cardElevation="4dp">


            <TextView
                android:id="@+id/tv_callfirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="+91-9657959184"
                android:textSize="16sp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_callsecond">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_settings_phone_black_24dp"
            android:padding="16dp"
             />

        <android.support.v7.widget.CardView
            android:id="@+id/cd_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="16dp"
            app:cardElevation="4dp"

            >

            <TextView
                android:id="@+id/tv_callsecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="+91-712-646661"
                android:textSize="16sp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_callthree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_settings_phone_black_24dp"
            android:padding="16dp"
             />

        <android.support.v7.widget.CardView
            android:id="@+id/cd_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="16dp"
            app:cardElevation="4dp"

            >

            <TextView
                android:id="@+id/tv_callthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="+91-712-2226288"
                android:textSize="16sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@color/red_400"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_margin="16dp"
        android:gravity="center"/>
</LinearLayout>