<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_400"
        android:padding="16dp"
        android:text="Email to SSIT"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowRadius="1.3"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowColor="#fdab52"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_emailfirst"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:padding="16dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cd_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="16dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:text="contact@ssinfotect.org"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_emailsecond"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:padding="16dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cd_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="16dp"
        app:cardElevation="4dp"

        >

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="hr@ssinfotech.org"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/btn_emailcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/red_400"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>